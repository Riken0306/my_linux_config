{
	"workbench.colorTheme": "One Dark Pro",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.sideBar.location": "left",
	"window.newWindowDimensions": "inherit",
	"workbench.tree.enableStickyScroll": true,
	"security.workspace.trust.untrustedFiles": "open",
	// Files
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
	// Diff Editor
	"diffEditor.wordWrap": "on",
	"diffEditor.ignoreTrimWhitespace": false,
	"diffEditor.renderSideBySide": true,
	// Editor
	"editor.snippetSuggestions": "bottom",
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.copyWithSyntaxHighlighting": false,
    "editor.detectIndentation": false,
    "editor.guides.indentation": false,
    "editor.definitionLinkOpensInPeek": true,
	"editor.fontFamily": "'FiraCode Nerd Font Mono', 'Droid Sans Mono', 'monospace', monospace",
    "editor.fontLigatures": true,
    "editor.codeLensFontFamily": "Bedstead-Extended",
	"editor.suggestFontSize": 16,
	"editor.suggestLineHeight": 30,
	"editor.linkedEditing": true,
	"editor.formatOnSave": false,
	"editor.fontSize": 16,
	"editor.minimap.maxColumn": 250,
	"editor.accessibilitySupport": "off",
	"editor.wordWrap": "off",
	"editor.fontWeight": "400",
	"editor.inlineSuggest.suppressSuggestions": true,
	"editor.padding.top": 10,
	"editor.cursorSmoothCaretAnimation": "explicit",
	"editor.cursorBlinking": "expand",
	"editor.stickyScroll.enabled": false,
	"editor.lineHeight": 24,
    "editor.insertSpaces": false,
	// Terminal
	"terminal.integrated.gpuAcceleration": "on",
	"terminal.integrated.defaultProfile.linux": "zsh",
	"terminal.integrated.lineHeight": 1.1,
	"terminal.integrated.fontSize": 14,
    // Search
	"search.exclude": {
		"**/vendor/{[^l],?[^ai]}*": true,
		"**/public/{[^i],?[^n]}*": true,
		"**/node_modules": true,
		"**/dist": true,
		"**/_ide_helper.php": true,
		"**/composer.lock": true,
		"**/package-lock.json": true,
		"storage": true,
		".phpunit.result.cache": true
	},
	"material-icon-theme.saturation": 0,
	"material-icon-theme.files.color": "#42a5f5",

    // Customization++
	"apc.activityBar": {
		"position": "bottom",
		"itemSize": 30,
		"size": 35,
		"itemMargin": 5
	},
	"window.density.editorTabHeight": "compact",
	"apc.electron": {
		"opacity": 0.8,
		"backgroundColor": "#ffffff",
		"vibrancy": "ultra-dark",
		"backgroundMaterial": "acrylic",
		"titleBarStyle": "hiddenInset",
	},
	"apc.stylesheet": {
		// ".editor .scrollbar .slider": "visibility: hidden",
		// ".editor .scrollbar:hover .slider": "visibility: initial",
		".monaco-editor .scroll-decoration": "box-shadow: 0px 0px 20px rgba(0, 0, 0, .75) !important;top: -6px !important;",
		".part.sidebar": "box-shadow: 0px 0px 50px rgba(0, 0, 0, .25)",
		".monaco-workbench .part.editor>.content .editor-group-container>.title .editor-actions": "display: none",
		".monaco-workbench .part.sidebar .title-actions .actions-container": "display: none",
		".quick-input-widget": "transform: translateY(-50%) !important; top: 50% !important; box-shadow: 0px 8px 20px rgba(0, 0, 0, .45) !important; padding: 10px 10px 18px 10px !important; background-image: linear-gradient(#3c3c50 0%, #2a2b38 100%) !important; backdrop-filter: blur(3px) !important; border-radius: 20px !important;",
	},
	"apc.statusBar": {
		"fontSize": 12,
		"position": "editor-bottom",
		"height": 20,
    },
    "terminal.integrated.fontFamily": "FiraCode Nerd Font",
    "cmake.showOptionsMovedNotification": false,
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "makefile.configureOnOpen": true,
    "vim.leader": "<space>",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",

    "vscode-neovim.compositeKeys": {
        "jk": {
            // Use lua to execute any logic
            "command": "vscode-neovim.lua",
            "args": [
                [
                    "local code = require('vscode')",
                    "code.action('vscode-neovim.escape')",
                    "code.action('workbench.action.files.save')",
                ],
            ],
        },
    },
    "editor.minimap.enabled": false,
    "window.customTitleBarVisibility": "auto",
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
	"prettier.tabWidth": 4,
	"search.smartCase": true,
}


